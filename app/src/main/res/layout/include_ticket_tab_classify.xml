<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:paddingTop="8dp"
    android:gravity="center"
    android:paddingBottom="8dp"
    android:id="@+id/tab_layout"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_ticket_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ticket_tab"
            android:layout_width="18dp"
            android:layout_height="13dp"
            android:src="@mipmap/iv_details_position" />

        <TextView
            android:id="@+id/tv_ticket_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="工单"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dealWith_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dealWith_tab"
            android:layout_width="18dp"
            android:layout_height="13dp"
            android:src="@mipmap/iv_details_position"/>

        <TextView
            android:id="@+id/tv_dealWith_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="推荐内容"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_overInfo_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_overInfo_tab"
            android:layout_width="18dp"
            android:layout_height="13dp"
            android:src="@mipmap/iv_details_position" />

        <TextView
            android:id="@+id/tv_overInfo_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工单信息"
            android:textSize="14sp"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_comment_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comment_tab"
            android:layout_width="18dp"
            android:layout_height="13dp"
            android:src="@mipmap/iv_details_position" />

        <TextView
            android:id="@+id/tv_comment_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="评论"
            />
    </LinearLayout>


</LinearLayout>